	<div class='container-fluid'>
	  <h2>The Idea</h2>
		<p><%= @mission.body.html_safe %></p>
	  <blockquote><%= @mission.statement %></blockquote>
	</div>
</section>
<hr />
<section id='the_work' class='region'>
  <div class='container-fluid'>
  	<h2>The Work</h2>
  	<p><%= @thework.body %></p>
  </div>
  
  <section id='artists'>
    <ul class='unstyled artists'>
      <% @thework.artists.each do |artist| %>
        <%= render 'artist', :artist => artist %>
      <% end  %>
    </ul>
  </section>
</section>
